<h2>商品一覧</h2>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name,item %></td>
        <td><%= item.body %></td>
        <td><%= item.price %></td>
        <td></td>
      </tr>
    <% end %>
    <% paginate @items %>
  </tbody>
</table>