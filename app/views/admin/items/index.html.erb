<div class='col-md-8 offset-md-2 mt-3'>
  <div class="d-flex fa-2x">
    <h2 class='p-2 flex-grow-1'>商品一覧</h2>
    <div class='p-2'>
      <%= link_to new_admin_item_path do %>
        <i class="fa-solid fa-circle-plus fa-xl" style="color: #74c0fc;"></i>
      <% end %>
    </div>
  </div>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th scope='col' style='width: 10%'>商品ID</th>
        <th>商品名</th>
        <th scope='col' style='width: 10%'>税抜価格</th>
        <th>ジャンル</th>
        <th scope='col' style='width: 15%'>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item.id) %></td>
          <td><%= item.price.to_s(:delimited) %></td>
          <td><%= item.genre.name %></td>
          <td>
            <% if item.is_active? %>
              <p class="text-success">販売中</p>
            <% else %>
              <p class="text-danger">販売停止中</p>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class='row my-3 justify-content-center'>
    <%= paginate @items %>
  </div>
</div>