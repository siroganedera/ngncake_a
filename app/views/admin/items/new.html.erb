<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>新規商品登録</h2>
    <%= form_with model:@item, local:true do |f| %>
      <div class="form-group">
        <%= f.label :商品画像 %>
        <%= f.file_field :item_image, class: "form-control-file item_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :商品名 %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :商品説明 %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit "新規登録", class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
