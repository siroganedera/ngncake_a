<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>商品編集</h2>
    <%= form_with model:@item, url: admin_item_path(@item), local:true do |f| %>
      <div class="form-group">
        <%= f.label :商品画像 %>
        <%= f.file_field :image, class: "form-control-file image" , accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :商品名 %>
        <%= f.text_field :name, class: "form-control name", placeholder:'商品名' %>
      </div>
      <div class="form-group">
        <%= f.label :商品説明 %>
        <%= f.collection_select :id, Genre.all, :id, :name, {prompt: "--選択してください--"}, :class => 'form-control', :id => 'genre_id' %>
      </div>
      <div class="form-group">
        <%= f.label :ジャンル %>
        <%= f.select :genre, ['ケーキ'], {include_blank: '--選択してください--'} %>
      </div>
      <div class="form-group">
        <%=f.label:税抜価格 %>
        <%=f.text_field :price, class: "form-control price", placeholder:'1000' %>円
      </div>
      <p>販売ステータス</p>
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
      <div class="form-group">
        <%= f.submit "変更を保存", class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>