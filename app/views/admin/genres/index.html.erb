<div class="col-md-9 offset-md-2 mt-3">
  <h2 class="offset-md-1 my-4">ジャンル一覧・追加</h2>
  <div class="row my-3 justify-content-center">
    <%= form_with model: @genre_new, url: admin_genres_path, local: true do |f| %>
    <div class="d-flex">
      <div class="form-group d-flex">
        <div class="p-3"><%= f.label :name, "ジャンル名" %></div>
        <div class="p-2"><%= f.text_field :name, placeholder: "ジャンル名",autofocus: true, autocomplete: "name",class: 'form-control genre_name', size: 50 %></div>
      </div>
      <div class="form-group">
        <div class="p-1 px-5"><%= f.submit "新規登録", class: 'btn btn-lg btn-success' %></div>
      </div>
    </div>
    <% end %>
    <table class='table table-hover table-inverse col-md-6'>
      <thead>
        <tr>
          <th scope='col' style='width: 20%'>ジャンル</th>
          <th scope='col' style='width: 10%'></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td scope='col' style='width: 20%'><%= genre.name %></td>
            <td scope='col' style='width: 10%'><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-sm btn-outline-secondary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>