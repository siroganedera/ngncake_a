<h1>ジャンル一覧・追加</h1>
<%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name, "ジャンル名" %>
    <%= f.text_field :name, placeholder: "ジャンル名",autofocus: true, autocomplete: "name",class: 'form-control genre_name' %>
  </div>
  <div class="form-group">
    <%= f.submit "新規登録", class: 'btn btn-success' %>
  </div>
<% end %>
<%# ジャンル一覧 %>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th>編集</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-sm btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>