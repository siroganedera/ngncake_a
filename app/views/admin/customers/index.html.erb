<div class="col-md-8 offset-md-2 mt-3">
  <h2 class="p-2">会員一覧</h2>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th scope='col' style='width: 10%'>会員ID</th>
        <th scope='col' style='width: 30%'>氏名</th>
        <th scope='col' style='width: 40%'>メールアドレス</th>
        <th scope='col' style='width: 20%'>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to "#{customer.last_name} #{customer.first_name}", admin_customer_path(customer) %></td>
          <td><%= customer.email %></td>
          <td>
          <% if customer.is_active? %>
            <p class="badge badge-success">有効</p>
          <% else %>
            <p class="badge badge-danger">退会済</p>
          <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="row my-3 justify-content-center">
    <%= paginate @customers %>
  </div>
</div>