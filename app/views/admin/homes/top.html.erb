<div class='container'>
  <h3 class="m-3">Order history</h3>
  <div class='row'>
    <table class='table table-hover table-inverse'>
        
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
    
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at,admin_order_path(order) %></td>
    
            <td><%= link_to order.customer.last_name + order.customer.first_name, admin_order_path(order) %></td>
    
            <td>
              <% order.order_details.each do |order_detail| %>
                <%= order_detail.amount %> 
              <% end %>
            </td>
            
            <td><%= order.status_i18n %></td>
    
          </tr>
        <% end %>
      </tbody>
          
    </table>
    </div>
  </div>
</div>
