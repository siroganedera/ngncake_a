<div class='container mt-3'>
  
  <div class='row'>
    <div class='col-md-2'>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
            </tr>
          <% end %>
        </tbody>  
      </table>
    </div>
    <div class='col-md-7 offset-md-3 m-auto'>
