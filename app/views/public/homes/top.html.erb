<div class='offset-md-1 mt-5'>
  <div class='row'>
    <div class='col-md-2 text-center'>
      <div>
      <%= image_tag "nagano_cake.png", class: "card-img-top img-fluid mb-5", style: "transform: scale(1.3);" %>
      </div>
      <table class='table table-hover table-inverse' style="position: relative; z-index: 1;" >
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
             <td><%= genre.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class='col-md-8 offset-md-1 m-auto'>
      <div class="col-md-11"><%= image_tag "toppage.png", class: "card-img-top img-fluid" %></div>
      <div class="mx-auto mt-5">
      <h2 class="ml-3">新着商品</h2>
        <div class="row col-md-10">
          <% @items.first(4).each do |item| %>
            <div class="px-4">
              <div class="card" style="width: 180px; height: 270px;">
                <div class="img-container">
                  <%= link_to item_path(item) do %>
                    <%= image_tag item.get_image(400,400) %>
                  <% end %>
                </div>
                <div class="card-body">
                  <p class="card-text h-75"><%= item.name %></p>
                  <% if item.is_active == true %>
                    <p class="card-text">￥<%= item.add_tax_price.to_s(:delimited) %></p>
                  <% else %>
                    <p class="card-text text-danger">販売停止中</p>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <div class="text-right mb-4 mr-5 pr-5">
          <%= link_to "すべての商品を見る >", items_path, class: "custom-link text-dark" %>
        </div>
      </div>
    </div>
  </div>
</div>