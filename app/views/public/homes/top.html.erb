<div class='container mt-5'>
  <div class='row'>
    <div class='col-md-2 text-center'>
      <div>
      <%= image_tag "nagano_cake.png", class: "card-img-top img-fluid", style: "transform: scale(1.3);" %>
      </div>
      <table class='table table-hover table-inverse' style="position: relative; z-index: 1;" >
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
             <td><% genre.name %></td>
            </tr>
          <% end %>
        </tbody>  
      </table>
    </div>
    <div class='col-md-9 offset-md-1 m-auto'>
      <%= image_tag "toppage.png", class: "card-img-top img-fluid" %>
      <div class="mx-auto mt-5">
      <h2>新着商品</h2>
        <div class="row">
          <% @items.first(4).each do |item| %>
            <div class="col-md-3">
              <div class="card h-100">
                <div class="card-body text-center">
                <%= link_to item_path(item) do %>
                <%= image_tag item.get_image(200,200),class:"card-img-top"  %>
                <% end %>
                  <p class="card-text"><%= item.name %></p>
                  <% if item.is_active == true %>
                    <p class="card-text"><%= item.price %>円</p>
                  <% else %>
                    <p class="card-text text-danger">販売停止中</p>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <div class="text-right m-4">
          <%= link_to "すべての商品を見る", items_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>