<%= form_with model: @order , url: orders_path, local:true do |f| %>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>

      <div style="font-size: 10px;">注文情報確認</div>
      <table class="table table-bordered">
        <thead class="thead-dark">
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>

        <tbody>
          <% total_subtotal = 0 %>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%#= image_tag cart_item.item.get_image, size: "50x50"  %>
              <%= cart_item.item.name %>
            </td>

            <%# 税込価格 %>
            <td><%= cart_item.item.add_tax_price %></td>

            <%# 商品の個数 %>
            <td><%= cart_item.amount %></td>

            <%# 税込価格×個数 %>
            <td><%= cart_item.subtotal %></td>
            <%# 合計計算 %>
            <% total_subtotal += cart_item.subtotal %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class='col-md-3'>
      <table class='table'>
        <tr>
      	  <th>送料</th>
      	  <th><%= @order.shipping_cost %></th>
      	  <%= f.hidden_field :shipping_cost, :value => @order.shipping_cost %>
        </tr>

        <tr>
      	  <th>商品合計</th>
      	  <th><%= total_subtotal %></th>
        </tr>

        <tr>
      	  <th>請求金額</th>
      	  <th><%= total_subtotal+@order.shipping_cost %></th>
      	  <%= f.hidden_field :total_payment, :value => total_subtotal+@order.shipping_cost %>
        </tr>
      </table>
    </div>
  </div>
  <div class = row >
    <table class= table>
      <tr>
        <th style="font-size: 12px;">支払い方法</th>
        <td><%= @order.payment_method_i18n %></td>
        <%= f.hidden_field :payment_method, :value => @order.payment_method %>
      </tr>
      <tr>
        <th style="font-size: 12px;">お届け先</th>
        <td><%= "#{@order.postal_code}, #{@order.address}" %><br><%= @order.name %></td>
        <%= f.hidden_field :postal_code, :value => @order.postal_code %>
        <%= f.hidden_field :address, :value => @order.address %>
        <%= f.hidden_field :name, :value => @order.name %>
      </tr>
    </table>
  </div>
  <div class="row">
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>
      <div class="btn-wrapper col-10 mx-auto">
        <div class="row">
          <%= f.hidden_field :customer_id, :value => current_customer.id %>
          <%= f.hidden_field :status, :value => 0 %>
          <%= f.submit value="注文を確定する", class: "btn btn-success btn-sm " %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>