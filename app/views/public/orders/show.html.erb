<div class="container">
  <h2 class="m-3">注文履歴詳細</h2>
  <div class="row justify-content-center">
    <div class="col-md-7">
      <h5 class="p-3 mb-2 bg-light text-dark">注文情報</h5>
      <table class="table">
        <tbody>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td><%= @order. %></td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td>銀行振込</td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td>入金確認</td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-4 offset-md-1">
      <h5 class="p-3 mb-2 bg-light text-dark">請求情報</h5>
      <table class="table">
        <tbody>
          <tr>
            <th>商品合計</th>
            <td>1500</td>
          </tr>
          <tr>
            <th>配送料</th>
            <td>800</td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td>2300</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <h5 class="mt-5 p-3 mb-2 bg-light text-dark">注文内容</h5>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>商品</th>
        <th>単価（税込）</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <%# @addresses.each do |address| %>
        <tr>
          <td>2019/11/5</td>
          <td>150</td>
          <td>2</td>
          <td>2300</td>
        </tr>
      <%# end %>
    </tbody>
  </table>
</div>