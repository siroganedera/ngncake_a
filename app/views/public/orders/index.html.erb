<h1>注文履歴一覧</h1>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <%# 注文日 %>
      <td><%= order.created_at %></td>
      
      <%# 配送先 %>
      <td><%= order.postal_code,<br> order.address, order.name %></td>
      
      <%# 注文商品 %>
      <td><%= order.items.name %></td>
      
      <%# 支払金額 %>
      <td><%= order.total_payment %></td>
      
      <%# ステータス %>
      <td><%= order.status %></td>
      
      <%# 注文履歴詳細 %>
      <td><%=link_to '表示する', order_path, class: "btn btn-sm btn-primary" %></td>
    </tr>
  </tbody>
</table>



