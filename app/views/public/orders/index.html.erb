<div class='container px-5 px-sm-0'>

  <div>注文履歴一覧</div>
  
  <div class='row'>
    <table class='table table-bordered table-inverse'>
      <thead class="thead-dark">
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <%# 注文日 %>
            <td>
              <%= order.created_at %>
            </td>
            
            <%# 配送先 %>
            <td>
              〒<%= order.postal_code %><br><%= order.address %><br><%= order.name %>
            </td>
            
            <%# 注文商品 %>
            <td>
              <% order.order_details.each do |order_detail| %>
                <%= order_detail.item.name %> 
              <% end %>
            </td>
            
            <%# 注文金額 %>
            <td>
              ￥<%= order.total_payment %>
            </td>
            
            <%# ステータス %>
            <td>
              <%= order.status_i18n %>
            </td>
            
            <%# 注文詳細 %>
            <td>
              <%= link_to '表示する', order, class: "btn btn-sm btn-primary" %>
            </td>
          </tr>
        <% end %>
      </tbody>

    </table>
  </div>
</div>