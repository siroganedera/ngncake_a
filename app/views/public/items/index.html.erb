<div class='container mt-5'>
  <div class='d-flex flex-row'>
    <div class='p-2 col-md-2 text-center'>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="offset-md-1 col">
      <div class="d-flex">
        <h2 class="offset-md-1 p-2">商品一覧</h2>
        <h4 class="pt-3">(全<%= @items.all.count %>件)</h4>
      </div>
      <div class='d-flex flex-wrap'>
        <% @items.each do |item| %>
        <div class='col-md-3'>
          <div class="card m-2" style="width: 180px; height: 270px;">
            <%= link_to item_path(item) do %>
              <div class="img-container"><%= image_tag item.get_image(178,136) %></div>
            <% end %>
            <div class="card-body">
              <p class="h-75"><%= item.name %></p>
              <% if item.is_active == true %>
                ￥<%= item.add_tax_price.to_s(:delimited) %>
              <% else %>
                <p class="text-danger">販売停止中</p>
              <% end %>
            </div>
          </div>
        </div>
        <% end %>
      </div>
      <div class="col row my-3 justify-content-center">
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>