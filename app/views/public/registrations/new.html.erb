<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
    <div>
      <h3 class="mb-0">新規会員登録</h3>
    </div>
    <%= form_with model: @customer, url: customer_registration_path do |f| %>
      <%= render 'layouts/errors', obj: @customer %>

      <table class="table">
        <tbody>
          <tr>
            <th>名前</th>
            <td>
              <label for="last_name">(姓)</label>
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control mb-2" %>
              <label for="first_name">(名)</label>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control mb-2" %>
            </td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td>
              <label for="last_name">(カナ)</label>
              <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "form-control mb-2" %>
              <label for="last_name">(メイ)</label>
              <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "form-control mb-2" %>
            </td>
          </tr>
          <tr>
            <th>郵便番号(ハイフンなし)</th>
            <td>
              <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control" %>
            </td>
          </tr>
          <tr>
            <th>住所</th>
            <td>
              <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control" %>
            </td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td>
              <%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: "form-control" %>
            </td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </td>
          </tr>
          <tr>
            <th>パスワード(6文字以上)</th>
            <td>
              <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
            </td>
          </tr>
          <tr>
            <th>パスワード(確認用)</th>
            <td>
              <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" %>
            </td>
          </tr>
        </tbody>
      </table>
      
      <div class="form-group text-center">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    <% end %>
    </div>
      <div class="col-md-4">
        <div class="card">
          <div class="card-header text-center">
            <h3 class="mb-0">既に登録済みの方</h3>
          </div>
          <div class="card-body text-center">
            <%= render "public/shared/links" %> からログインしてください
          </div>
        </div>
      </div>
    </div>
  </div>