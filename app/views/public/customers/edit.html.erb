<%= form_with model: @customer, url: customers_information_path, local: true do |f| %>
  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card">
          <%= render 'layouts/errors', obj: @customer %>
          <div class="card-header text-center">
            <h3>会員情報編集</h3>
          </div>
          <div class="card-body">
            <table class="table">
              <tbody>
                <tr>
                  <th>名前</th>
                  <td>
                    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control mb-2" %>
                    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control mb-2" %>
                  </td>
                </tr>
                <tr>
                  <th>フリガナ</th>
                  <td>
                    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "form-control mb-2" %>
                    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "form-control mb-2" %>
                  </td>
                </tr>
                <tr>
                  <th>郵便番号</th>
                  <td>
                    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control" %>
                  </td>
                </tr>
                <tr>
                  <th>住所</th>
                  <td>
                    <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control" %>
                  </td>
                </tr>
                <tr>
                  <th>電話番号</th>
                  <td>
                    <%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: "form-control" %>
                  </td>
                </tr>
                <tr>
                  <th>メールアドレス</th>
                  <td>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                  </td>
                </tr>
              </tbody>
            </table>
            <div class="text-center">
              <%= f.submit "編集内容を保存", class:" mr-5 btn btn-success" %>
              <%= link_to "退会する", customers_unsubscribe_path, class:"ml-5 btn btn-sm btn-danger" %>
            </div>
            
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>