<div class="container mt-4">
    <h3>マイページ</h3>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h5>登録情報　<%= link_to "編集する", customers_information_edit_path, class: "btn btn-secondary btn-sm ml-2" %></h5>
          <table class="table">
            <tbody>
              <tr>
                <th>氏名</th>
                <td><%= @customer.last_name %> <%= @customer.first_name %></td>
              </tr>
              <tr>
                <th>カナ</th>
                <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
              </tr>
              <tr>
                <th>郵便番号</th>
                <td>〒<%= @customer.postal_code %></td>
              </tr>
              <tr>
                <th>住所</th>
                <td><%= @customer.address %></td>
              </tr>
              <tr>
                <th>電話番号</th>
                <td><%= @customer.telephone_number %></td>
              </tr>
              <tr>
                <th>メールアドレス</th>
                <td><%= @customer.email %></td>
              </tr>
            </tbody>
          </table>

          <div class="mt-4 text-center">
            <h5>配送先　<%= link_to "一覧を見る", addresses_path, class: "btn btn-outline-primary btn-sm my-1 mx-4 px-4" %></h5>
            <h5>注文履歴<%= link_to "一覧を見る", orders_path, class: "btn btn-outline-success btn-sm mx-4 px-4" %></h5>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>